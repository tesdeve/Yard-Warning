<div class="updateForm" id="updateForm">
  <%= form_with(model: @marshall_warning, method: :put, local: false) do |form| %>
    <% if @marshall_warning.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@marshall_warning.errors.count, "error") %> prohibited this marshall_warning from being saved:</h2>

        <ul>
          <% @marshall_warning.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="cardInitial">
    <div class="card ">
      <div class="headerInitial">
        <h1 class="text-center mb-4 initialTitle">New Warning</h1>
      </div>
      <div class="row mb-mr dsp"> 
        <%= form.label :dsp, "DSP", :class => "strongSize col-sm-4 col-form-label col-form-label-lg d-flex justifying" %> 
        <div class="col-sm-7 d-flex flex-row-revers justifying-input">  
          <%= form.text_field :dsp, :class=> "form-control form-control-lg " %>  
        </div>
      </div>

      <div class="row mb-mr"> 
        <%= form.label :registration_number,  "Reg No.", :class => "strongSize col-sm-4 col-form-label col-form-label-lg d-flex justifying" %>
        <div class="col-sm-7 d-flex flex-row-revers justifying-input">
         <%= form.text_field :registration_number, :class=> "form-control form-control-lg" %>  
        </div>
      </div>

     <div class="row mb-mr"> 
        <%= form.label :fault, :class => "strongSize col-sm-4 col-form-label col-form-label-lg d-flex justifying" %>
        <div class="col-sm-7 d-flex flex-row-revers justifying-input">
          <%= form.text_area :fault, :class=> "form-control form-control-lg " %>  
        </div>
      </div>

      <div class="row mb-mr"> 
        <%= form.label :action_comment, "Action/Comment", :class => "strongSize col-sm-4 col-form-label col-form-label-lg d-flex justifying" %>
        <div class="col-sm-7 d-flex flex-row-revers justifying-input">
          <%= form.text_area :action_comment, :class=> "form-control form-control-lg " %>  
        </div>
      </div>

      <div class="row mb-mr dateTime"> 
        <%= form.label :datetime, "Date", :class => "strongSize col-sm-6 col-form-label col-form-label-lg d-flex justifying" %>
        <div class="col-sm-5 d-flex flex-row-revers justifying-input">
          <%= form.text_field :date, :class=> "form-control form-control-lg " %>  
        </div>
      </div>
      
      <div class="row margins justify-content-center">           
        <%= link_to 'Warnings', root_path, :class=> "btn btn-primary back col-sm-5", remote: true  %>
        <%= form.submit "Update", :class=> "btn btn-success check col-sm-5", remote: true %>
      </div>
    <% end %>
    </div>
  </div>
</div>




