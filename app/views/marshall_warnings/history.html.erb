<div class="cardInitial" id="indexwarningsHistory">
  <div class="card">
    <div class="headerInitial">
      <h1 class="text-center margins-y initialTitle">(<%= @marshall_warnings.count %>) - Warnings Deleted</h1>
    </div>
      <div class="row margins justify-content-center">
      <%= link_to 'Warnings', root_path, :class=> "btn btn-primary back back_history col-sm-5 my-4", :remote => true %></div> 
    <hr>
    <div class="input-group mb-3">
      <form class="searchDiv" action="/search">
        <input class="form-control inputSearch" name="q" type="search" placeholder="Search by DSP or Reg No." aria-label="Search" aria-describedby="basic-addon2">
        <button class="btn btn-outline-success btnSearch" type="submit" >Search</button>
      </form>
    </div>
    <hr>
    <div class="table-responsive ">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>DSP</th>
            <th>Reg No.</th>
            <th>Fault</th>
            <th>Action/Comment</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @marshall_warnings.each do |marshall_warning| %>
            <tr id="marshall_warning_<%=marshall_warning.id %>">
              <!-- <td class="text-center"><%#= marshall_warning.dsp_id %></td> -->
              <td class="text-center"><%= marshall_warning.dsp.upcase %></td>
              <td class="text-center"><%= marshall_warning.registration_number.upcase %></td>
              <td class="text-truncate trunqate"><%= marshall_warning.fault.capitalize %></td>
              <td class="text-truncate trunqate"><%= marshall_warning.action_comment.capitalize %></td>
              <td class="text-center"><%= marshall_warning.date.strftime("%d/%b/%Y") %></td>
              <td class="text-center"><%= link_to 'Show', marshall_warning, remote: true %></td>
              <td class="text-center"><%= link_to 'Edit', edit_marshall_warning_path(marshall_warning), remote: true %></td>
              <td class="text-center"><%#= link_to 'History', root_path, data: { confirm: 'Are you sure?, Sure??' }, remote: true %></td>
            <!--   <td class="text-center"><%#= link_to 'Destroy', marshall_warning, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td> -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row margins justify-content-center">
    <%= link_to 'Warnings', root_path, :class=> "btn btn-primary back back_history col-sm-5 my-4", :remote => true %>
  </div> 