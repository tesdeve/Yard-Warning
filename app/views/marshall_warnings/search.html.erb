<div class="cardInitial" id="indexSearch">
  <div class="card">
    <div class="headerInitial">
      <h1 class="text-center margins-y initialTitle">(<%= @marshall_warnings.count %>) - Warnings Found</h1>
    </div>
    <div id="newLink">
      <%= link_to 'New Warning', new_marshall_warning_path, :class=> "btn btn-primary lnkNewWarning my-4", remote: true %>
    </div>
    <div class="table-responsive ">
      <table class="table table-striped">
				<thead>
          <tr>
            <th>DSP</th>
            <th>Reg No.</th>
            <th>Fault</th>
            <th>Action/Comment</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
				</thead>
				<tbody>
				  <% @marshall_warnings.each do |marshall_warning| %>
            <tr>
              <!-- <td class="text-center"><%#= marshall_warning.dsp_id %></td> -->
              <td class="text-center"><%= marshall_warning.dsp.upcase %></td>
              <td class="text-center"><%= marshall_warning.registration_number.upcase %></td>
              <td class="text-truncate trunqate"><%= marshall_warning.fault %></td>
              <td class="text-truncate trunqate"><%= marshall_warning.action_comment %></td>
              <td class="text-center"><%= marshall_warning.date.strftime("%d/%b/%Y") %></td>
              <td class="text-center"><%= link_to 'Show', marshall_warning, remote: true   %></td>
              <td class="text-center"><%= link_to 'Edit', edit_marshall_warning_path(marshall_warning), remote: true   %></td>
              <!--<td class="text-center"><%#= link_to 'Destroy', marshall_warning, method: :delete, data: { confirm: 'Are you sure?' }, remote: true   %></td> -->
            </tr>
          <% end %>
				</tbody>
			</table>
		</div>
	</div>
  <div class="row margins justify-content-center">   
  <%= link_to 'Warnings',  marshall_warnings_path, :class=> "btn btn-success back col-sm-5", remote: true %>
</div>
</div>

